= form_for @competition_format do |f|
  - if @competition_format.errors.any?
    #error_explanation
      %h2= "#{pluralize(@competition_format.errors.count, "error")} prohibited this competition_format from being saved:"
      %ul
        - @competition_format.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
