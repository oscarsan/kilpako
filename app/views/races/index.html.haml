%h1 Listing races

%table
  %tr
    %th Event/competition
    %th Name
    %th Status
    %th Spots
    %th Format
    %th Status
    %th
    %th
    %th

  - @races.each do |race|
    %tr
      %td= "#{race.competition.event.name}/#{race.competition.name}"
      %td= race.name
      %td= race.status
      %td= race.spots
      %td= race.race_format.name
      %td= race.status
      %td= link_to 'Show', race
      %td= link_to 'Edit', edit_race_path(race)
      %td= link_to 'Destroy', race, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Race', new_race_path
